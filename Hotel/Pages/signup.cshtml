@page
@model Hotel.Pages.signupModel
@{
    ViewData["Title"] = "Sign Up";
}
<!-- Spinner Start -->
<div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
    <div class="spinner-border text-success" style="width: 3rem; height: 3rem;" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login and Sign Up</title>
    
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        

        .locontainer {
            max-width: 400px;
            margin-top: 50px;
        }
    </style>
</head>
<body>

    <div class="locontainer">
        @if (!string.IsNullOrEmpty(Model.UserError))
        {
            <div class="alert alert-danger" role="alert">
                @Model.UserError
            </div>
        }
        
        <hr>

        <!-- Sign Up Form -->
        <form id="signupForm" method="post">
            <h2 class="text-center mb-4">Sign Up</h2>
            <div class="form-group">
                <label class="form-label mt-1" for="Usrename">Username:</label>
                <input class="form-control mb-2" type="text" asp-for="@Model.Username">
                <span asp-validation-for="@Model.Username" class="text-danger"></span>
                <span asp-validation-for="Username" class="text-danger"></span>
                
            </div>
            <div class="form-group">
                <label class="form-label mt-1" for="name,">Name:</label>
                <input class="form-control mb-2" type="text" asp-for="@Model.Name">
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label mt-1" for="email,">Email:</label>
                <input class="form-control mb-2" type="email" asp-for="@Model.Email">
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
                
            </div>
            <div class="form-group">
                <label class="form-label mt-1" for="password,">password:</label>
                <input class="form-control mb-2" type="password" asp-for="@Model.Password">
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                
            </div>
            <button asp-page-handler="submit" class="btn btn-success mt-2">Sign Up</button>
            
        </form> 
        
        <hr>
        <label class="text-right">Already Have Account?! <a class="text-primary" href="Login SingUp"><u>LogIn.</u></a></label>
        <hr>
    </div>
    
</body>
</html>
