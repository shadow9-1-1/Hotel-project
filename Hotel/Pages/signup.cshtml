@page
@model Hotel.Pages.signupModel
@{
    ViewData["Title"] = "Sign Up";
}
<!-- Spinner Start -->
<div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
    <div class="spinner-border text-success" style="width: 3rem; height: 3rem;" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login and Sign Up</title>
    
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        

        .locontainer {
            max-width: 400px;
            margin-top: 50px;
        }
    </style>
</head>
<body>

    <div class="locontainer">
        
        <hr>

        <!-- Sign Up Form -->
        <form id="signupForm">
            <h2 class="text-center mb-4">Sign Up</h2>
            <div class="form-group">
                <label for="signupName">Full Name</label>
                <input type="text" class="form-control" id="signupName" placeholder="Enter your full name" required>
            </div>
            <div class="form-group">
                <label for="signupEmail">Email address</label>
                <input type="email" class="form-control" id="signupEmail" placeholder="Enter email" required>
            </div>
            <div class="form-group">
                <label for="signupPassword">Password</label>
                <input type="password" class="form-control" id="signupPassword" placeholder="Password" required>
            </div>
            <button type="submit" class="btn btn-success btn-block">Sign Up</button>
        </form>
        <hr>
        <label class="text-right">Already  Have Account?! <a class="text-primary" href="Login SingUp"><u>LogIn.</u></a></label>
        <hr>
    </div>
    
</body>
</html>
