@page
@model Hotel.Pages.feedbackModel
@{
    ViewData["Title"] = "FeedBack";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .feedback-container {
            max-width: 600px;
            margin: 50px auto;
        }

        .rating {
            color: #001524; /* Star color */
            cursor: pointer;
        }

        .rating:hover {
            color: #ffea00; /* Hovered star color */
        }

        .rated {
            color: #ffdb58; /* Selected star color */
        }
    </style>
</head>
<body>
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-success" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->
    <div class="container-fluid bg-success py-5 mb-5 bg-feedback">
        <div class="container py-5">
            <div class="row justify-content-center py-5">
                <div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="container text-center">
                        <div class="row justify-content-center">
                            <div class="col-lg-6">

                                <h1 class="text-white heading mb-3">FeedBack</h1>
                                <li class="text-white"><a class="text-success" href="Index">Home</a> &bullet; FeedBack</li>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-success px-3">FeedBack</h6>
            <h1 class="mb-5">Give US Your FeedBack</h1>
        </div>
        <div class="container feedback-container">
            <!-- Star Rating -->

            <h1>
                <div id="starRating" class="text-center mb-3">
                    <label>Your Rate: </label>
                    <span class="rating" data-rating="1">&#9733;</span>
                    <span class="rating" data-rating="2">&#9733;</span>
                    <span class="rating" data-rating="3">&#9733;</span>
                    <span class="rating" data-rating="4">&#9733;</span>
                    <span class="rating" data-rating="5">&#9733;</span>
                </div>
            </h1>
            <!-- Feedback Form -->
            <form id="feedbackForm">
                <div class="form-group">
                    <label for="fullName">Full Name</label>
                    <input type="text" class="form-control" id="fullName" placeholder="Enter your full name" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter your email" required>
                </div>
                <div class="form-group">
                    <label for="feedback">Your Feedback</label>
                    <textarea class="form-control" id="feedback" rows="5" placeholder="Enter your feedback" required></textarea>
                </div>
                <input type="hidden" id="rating" name="rating" value="1">
                <button type="submit" class="btn btn-success btn-block m-3">Submit Feedback</button>
            </form>
        </div>
    </div>
    
    <!-- Testimonial Start -->
    <div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
        <div class="container">
            <div class="text-center">
                <h6 class="section-title bg-white text-center text-success px-3">Testimonial</h6>
                <h1 class="mb-5">Our Clients Say!!!</h1>
            </div>
            <div class="owl-carousel testimonial-carousel position-relative">
                <div class="testimonial-item bg-white text-center border p-4">
                    <img class="bg-white rounded-circle shadow p-1 mx-auto mb-3" src="css/img/testimonial-1.jpg" style="width: 80px; height: 80px;">
                    <h5 class="mb-0">Emily Johnson</h5>
                    <p>New York, USA</p>
                    <p class="mb-0">
                        Our recent stay at the hotel was a perfect blend of comfort and luxury. The well-appointed rooms, delicious dining options,
                        and friendly staff contributed to a relaxing and enjoyable getaway. We can't wait to revisit!
                    </p>
                </div>
                <div class="testimonial-item bg-white text-center border p-4">
                    <img class="bg-white rounded-circle shadow p-1 mx-auto mb-3" src="css/img/testimonial-2.jpg" style="width: 80px; height: 80px;">
                    <h5 class="mb-0">John Doe</h5>
                    <p>Cairo, Egypt</p>
                    <p class="mt-2 mb-0">
                        The hotel's staff went above and beyond to make our stay memorable. The personalized service, combined with the
                        luxurious accommodations, created a truly unforgettable experience. Thank you for making our visit special.
                    </p>
                </div>
                <div class="testimonial-item bg-white text-center border p-4">
                    <img class="bg-white rounded-circle shadow p-1 mx-auto mb-3" src="css/img/testimonial-3.jpg" style="width: 80px; height: 80px;">
                    <h5 class="mb-0">Tom Hanks</h5>
                    <p>Los Angeles, USA</p>
                    <p class="mt-2 mb-0">
                        The hotel's attention to detail and commitment to guest satisfaction are truly commendable.
                        From the welcoming ambiance to the top-notch amenities, our stay was delightful. We look forward to returning in the future.
                    </p>
                </div>
                <div class="testimonial-item bg-white text-center border p-4">
                    <img class="bg-white rounded-circle shadow p-1 mx-auto mb-3" src="css/img/testimonial-4.jpg" style="width: 80px; height: 80px;">
                    <h5 class="mb-0">Marilyn Monroe</h5>
                    <p>Moscow, Russia</p>
                    <p class="mt-2 mb-0">
                        Our stay at the hotel exceeded all expectations. The rooms were impeccably clean, the staff was incredibly
                        courteous, and the overall experience was nothing short of exceptional. Highly recommended!
                    </p>
                </div>
            </div>
        </div>
    </div>
    <!-- Testimonial End -->


    
    <script>
        
        const stars = document.querySelectorAll('.rating');
        const ratingInput = document.getElementById('rating');

        stars.forEach((star) => {
            star.addEventListener('click', () => {
                const ratingValue = parseInt(star.getAttribute('data-rating'));
                ratingInput.value = ratingValue;

                stars.forEach((s, index) => {
                    if (index < ratingValue) {
                        s.classList.add('rated');
                    } else {
                        s.classList.remove('rated');
                    }
                });
            });
        });
    </script>

</body>
</html>
